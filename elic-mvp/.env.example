# Environment
ENVIRONMENT=development

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
DEFAULT_MODEL=claude-sonnet-3-5-20241022
VALIDATION_MODEL=gpt-4o
FALLBACK_MODEL=claude-haiku-3-5-20241022

# Token Limits & Cost Management
MAX_TOKENS_PER_SECTION=12000
TOKEN_BUDGET_WARNING_THRESHOLD=10000
MAX_COST_PER_DOCUMENT=2.0

# RAG Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME=elic_knowledge_base
EMBEDDING_MODEL=text-embedding-3-small

# Template Configuration
MIN_TEMPLATES_REQUIRED=5
TEMPLATES_PATH=/app/data/templates
VALIDATION_RULES_PATH=/app/data/rules

# SEAP Scraping Configuration
SEAP_BASE_URL=https://e-licitatie.ro
SEAP_SCRAPE_LIMIT=50
SEAP_RATE_LIMIT_DELAY=2

# Application Settings
LOG_LEVEL=INFO
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Demo Mode
DEMO_MODE=true
PREGENERATED_OUTPUTS_PATH=/app/data/demo_outputs

# Monitoring & Telemetry
ANONYMIZED_TELEMETRY=false
ENABLE_TOKEN_TRACKING=true
ENABLE_COST_ALERTS=true

# Database (if needed for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/elic_db
